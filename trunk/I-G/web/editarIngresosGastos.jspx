<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//ES"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:ui="http://java.sun.com/jsf/facelets"
  xmlns:h="http://java.sun.com/jsf/html"
  xmlns:f="http://java.sun.com/jsf/core"
  xmlns:rich="http://richfaces.org/rich">
<ui:composition template="/layout/layout.xhtml">
  <ui:define name="title">#{m.tituloingresosgastos}</ui:define>
  <ui:define name="content">
	  <f:loadBundle basename="es.antonio.duarte.resources.mensajes" var="m" />

    <table width="90%">
    <tr>
    	<th><h1>
    		<h:outputText value="#{m.modificaringresogasto}" rendered="#{ingresosGastosBean.ingresogasto.id != null}" />
    		<h:outputText value="#{m.insertaringresogasto}" rendered="#{ingresosGastosBean.ingresogasto.id == null}" />
    		</h1>
    	</th>
    </tr>
      <tr>
        <td>
        <h:form id="formaEditar">
          <h:inputHidden id="id" value="#{ingresosGastosBean.ingresogasto.id}" />
          <h:message for="fecha" styleClass="errorText" />

          <h:panelGrid columns="2" rowClasses="oddRow, evenRow" id="panelGridEditar" width="100%">
			<h:column>
	            <h:outputLabel for="fecha" styleClass="label">
	              <h:outputText value="#{m.fecha} " />	              
	            </h:outputLabel>
	        </h:column>
	        <h:column>
	            <rich:calendar id="fecha" value="#{ingresosGastosBean.ingresogasto.fecha}" />
			</h:column>
			<h:column>
				<h:outputLabel for="tipo" styleClass="label" >
					<h:outputText value="#{m.tipo}" />
				</h:outputLabel>
			</h:column>
			<h:column>		
				<h:selectOneListbox id="tipo" value="#{ingresosGastosBean.ingresogasto.tipo}" style=" width : 95%;">		            
		            <f:selectItems value="#{ingresosGastosBean.tipos}" />
				</h:selectOneListbox>
			</h:column>
			<h:column>
				<h:outputLabel for="cantidad" styleClass="label" >
					<h:outputText value="#{m.cantidad}" />
				</h:outputLabel>
			</h:column>
			<h:column>
				<h:inputText id="cantidad" value="#{ingresosGastosBean.ingresogasto.cantidad}" style=" width : 95%;"/>
			</h:column>
			<h:column>
				<h:outputLabel for="concepto" styleClass="label" >
					<h:outputText value="#{m.concepto}" />
				</h:outputLabel>
			</h:column>
			<h:column>
				<h:inputTextarea id="concepto" value="#{ingresosGastosBean.ingresogasto.concepto}" style=" width : 95%;"/>				
			</h:column>
			<h:column>
	            <h:commandLink action="#{ingresosGastosBean.insertar}" rendered="#{ingresosGastosBean.ingresogasto.id == null}">
	              <h:graphicImage id="imagenA" border="0" alt="#{m.agregaringresogasto}"
	                url="/images/ico_agregar.gif"
	                style="border:0px;text-align: center;" width="15" height="15" />
	            </h:commandLink>
            </h:column>
            <h:column>            
	            <h:commandLink action="#{ingresosGastosBean.actualizarLista}" rendered="#{ingresosGastosBean.ingresogasto.id != null}">
	              <h:graphicImage id="imagenActualizar" border="0"
	                alt="#{m.actualizar}" url="/images/ico_doc_editar.gif"
	                style="border:0px;text-align: center;" />
	            </h:commandLink>
			</h:column>
          </h:panelGrid>

        </h:form>
        </td>
      </tr>
      <!-- 
      <tr>
        <td><ui:insert name="lista">
          <ui:include src="ingresosgastos.jspx" />
        </ui:insert></td>
      </tr>
      -->
    </table>

  </ui:define>
</ui:composition>
</html>
